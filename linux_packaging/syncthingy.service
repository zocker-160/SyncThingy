[Unit]
Description=SyncThingy

[Service]
Type=simple
ExecStart=flatpak run --command=syncthing com.github.zocker_160.SyncThingy --no-browser --logfile=default
ExecStop=flatpak kill com.github.zocker_160.SyncThingy
Restart=on-failure
RestartSec=1
SuccessExitStatus=0

[Install]
WantedBy=default.target
